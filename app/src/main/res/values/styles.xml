<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Splashtheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_drw</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_price_list</item>
        <!--<item name="android:typeface">serif</item>-->
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--vk-->
    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/fab_margin</item>
        <item name="android:paddingEnd">@dimen/fab_margin</item>
        <item name="android:minWidth">@dimen/minwidht_btn_login</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/fab_margin</item>
        <item name="android:paddingStart">@dimen/fab_margin</item>
        <item name="android:paddingEnd">@dimen/fab_margin</item>
        <item name="android:paddingTop">@dimen/fab_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="sidebar_button">
        <item name="android:background">@drawable/bg_btn_menu</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center|start</item>
        <item name="android:drawablePadding">@dimen/fab_margin</item>
        <item name="android:paddingStart">@dimen/fab_margin</item>
        <item name="android:paddingEnd">@dimen/all_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:onClick">side_menu_click</item>
    </style>

    <style name="ToolbarStyle" parent="@style/AppTheme.AppBarOverlay">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/color_price_list</item>
        <item name="titleTextColor">@color/color_price_list</item>
    </style>

    <!--для диалога-->
    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">21dp</item>
        <item name="android:paddingEnd">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="MyThemeCrop" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="StyleTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_price_list</item>
        <item name="tabIndicatorHeight">2dp</item>
        <!--<item name="tabPaddingStart">6dp</item>-->
        <!--<item name="tabPaddingEnd">6dp</item>-->
        <!--<item name="tabBackground">?attr/selectableItemBackground</item>-->
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>

        <item name="tabSelectedTextColor">@color/color_price_list</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/color_hint_search</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="picture.QQ.style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/ic_arrow_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/arrow_up</item>
        <!--Цвет текста заголовка-->
        <item name="picture.title.textColor">@color/color_price_list</item>
        <!--Текст справа от строки заголовка-->
        <item name="picture.right.textColor">@color/color_price_list</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/select_photo</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/color_price_list</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/color_price_list</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval_</item>
        <!--Цвет текста заголовка интерфейса предварительного просмотра-->
        <item name="picture.ac_preview.title.textColor">@color/color_price_list</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/color_price_list</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/colorPrimary</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/color_fa</item>
        <!--预览界面状态栏颜色-->
        <item name="picture.status.color">@color/colorPrimaryDark</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/ic_arrow_back</item>
        <!--是否改变预览界面状态栏字体颜色为黑色-->
        <item name="picture.preview.statusFontColor">false</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/colorPrimaryDark</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CastomTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>
</resources>
