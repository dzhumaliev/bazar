<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1px"
    android:background="@drawable/bg_grid_item"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:paddingTop="@dimen/all_padding">

    <LinearLayout
        android:id="@+id/view_contetnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/img_ad"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_ad_grid"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imageView_asop"
                android:layout_width="@dimen/size_icons"
                android:layout_height="@dimen/size_icons"
                android:layout_gravity="end|top"
                android:layout_margin="@dimen/all_padding"
                app:srcCompat="@drawable/ic_asop" />

            <TextView
                android:id="@+id/tv_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/bg_premium"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/premium"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom">

                <ImageView
                    android:id="@+id/imageView_fund"
                    android:layout_width="@dimen/size_icons"
                    android:layout_height="@dimen/size_icons"
                    android:layout_margin="@dimen/all_padding"
                    app:srcCompat="@drawable/ic_fund" />

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="@dimen/size_icons"
                    android:layout_height="@dimen/size_icons"
                    android:layout_margin="@dimen/all_padding"
                    app:srcCompat="@drawable/ic_star" />


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/all_padding">

            <TextView
                android:id="@+id/tv_title_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:text="Title_Titdhrer  eryeryyry ery eery yylr ery  ery yer"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_categ_ic"
                    android:layout_width="@dimen/size_icons"
                    android:layout_height="@dimen/size_icons"
                    app:srcCompat="@drawable/ic_category" />

                <TextView
                    android:id="@+id/tv_Categ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/all_padding"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Categ"
                    android:textColor="@color/color_city" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_padding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_city_ic"
                    android:layout_width="@dimen/size_icons"
                    android:layout_height="@dimen/size_icons"
                    app:srcCompat="@drawable/ic_city" />

                <TextView
                    android:id="@+id/tv_CityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/all_padding"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="City"
                    android:textDirection="locale"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_city" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="33 000 $"
                android:textDirection="ltr"
                android:textColor="@color/color_price_list"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/view_contetnt"
        android:background="@color/color_divider"></View>
</RelativeLayout>