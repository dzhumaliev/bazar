<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_dialog_fragment"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/all_padding"
    app:cardCornerRadius="@dimen/all_padding"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/all_padding">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/complain"
            android:textColor="@color/color_price_list"
            android:textSize="@dimen/size_text_city"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_complain_confirm" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/fab_margin"

            android:text="@string/complain_confirm"
            android:textColor="@color/color_price_list"
            android:textSize="@dimen/size_din_param"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center">

            <Button
                android:id="@+id/btn_send_complain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/item_tips"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn_phone"
                android:gravity="center"
                android:paddingStart="@dimen/fab_margin"
                android:paddingEnd="@dimen/fab_margin"
                android:text="@string/returned"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textColor="@color/selector_btn_text_phone"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>



